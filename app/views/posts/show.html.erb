
    <!-- Page Content -->
    <div class="container post-container">

      <!-- Portfolio Item Heading -->
      <div class="row">
        <h1 class="page-header"><%=@post.title%>
        </h1>
      </div>
    </div>

      <!-- Portfolio Item Row -->
      <div class="row">

        <div class="col-md-8">
          <%= image_tag @post.image, class: 'ing-responsive' %>
        </div>

        <div class="col-md-4">
          <h3>Blog Post Description</h3>
          <p><%= @post.body %></p>
        </div>

      </div>
      <!-- /.row -->

      <!-- Related Projects Row -->
      <div class="row">

        <div class="col-lg-12">
          <h3 class="page-header">Related Posts</h3>
        </div>

        <% @posts.each do |post| %>
          <div class="col-sm-3 col xs-6">
            <%= link_to post_path(post) do %>
              <%= image_tag post.image, class: 'ing-responsive portfolio-item' %>
            <% end %>
          </div>
        <% end %>

      </div>
      <!-- /.row -->
</div>
